# Nocturne Environment Variables

# Primary Database Configuration (Local)
POSTGRES_USER=nocturne
POSTGRES_PASSWORD=nocturne
POSTGRES_DB=nocturne
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# Authentication Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production
ADMIN_API_KEY=your-admin-api-key-here

# Supabase Configuration (Optional - for real-time event sharing across users)
# Sign up at https://supabase.com and get your project credentials
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Email Configuration (choose one or both)
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@nocturne.events

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@nocturne.events

# Frontend Configuration
VITE_API_URL=http://localhost:8000

# Scraper Configuration (optional - see scraper/config.json for defaults)
# Firecrawl API (optional fallback)
FIRECRAWL_API_KEY=your-firecrawl-api-key

# Hyperbrowser API (optional fallback)
HYPERBROWSER_API_KEY=your-hyperbrowser-api-key

# Browserbase API (optional fallback)
BROWSERBASE_API_KEY=your-browserbase-api-key

# Anchor Browser API (optional fallback)
ANCHOR_BROWSER_API_KEY=your-anchorbrowser-api-key
